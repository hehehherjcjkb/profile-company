generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SiteContent {
  id           Int      @id @default(autoincrement())
  section      String
  content_key  String
  content_value String
  updated_at   DateTime @default(now()) @updatedAt

  @@unique([section, content_key])
  @@map("site_contents")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String
  role     String  @default("user")

  @@map("users")
}
